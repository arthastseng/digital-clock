<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingHorizontal="8dp"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/checkbox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:buttonTint="@color/app_primary_color"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="@dimen/setting_edit_mode_check_box_size"
        android:layout_height="@dimen/setting_edit_mode_check_box_size" />

    <TextView
        android:layout_marginStart="10dp"
        android:id="@+id/time_zone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textSize="@dimen/time_zone_list_item_font_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/checkbox"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Asia/Tokyo" />

</androidx.constraintlayout.widget.ConstraintLayout>